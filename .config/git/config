[alias]
    d = diff
    cm = commit
    co = checkout
    br = branch
    st = status
    ps = push
    pl = pull
    ad = add
    fe = fetch
    fedr = fetch --dry-run
    cp = cherry-pick
    dft = difftool

[color]
    status = auto
    diff = auto
    branch = auto
    interactive = auto
    grep = auto
    ui = auto

[init]
    defaultBranch = main

[core]
    autocrlf = input
    ignorecase = false
    editor = nvim
    excludesfile = /Users/siraken/.gitignore_global

[push]
    default = simple

[pull]
    ; ff = only
    ; rebase = false

[credential]
    ; helper = osxkeychain

[filter "lfs"]
    smudge = git-lfs smudge -- %f
	  process = git-lfs filter-process
	  required = true
	  clean = git-lfs clean -- %f

[diff]
    tool = difftastic

[pager]
    difftool = true

[difftool]
    prompt = false

[difftool "nvimdiff"]
    cmd = nvim -d \"$LOCAL\" \"$REMOTE\"

[mergetool "nvimdiff"]
    cmd = nvim -d \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
    trustExitCode = true

[difftool "sourcetree"]
    cmd = opendiff \"$LOCAL\" \"$REMOTE\"
    path =

[difftool "difftastic"]
    cmd = difft "$LOCAL" "$REMOTE"

[mergetool "sourcetree"]
    cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
    trustExitCode = true

[commit]
    template = /Users/siraken/.stCommitMsg
    ; gpgsign = true

[gpg]
    format = ssh

[gpg "ssh"]
    program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"

[credential "https://github.com"]
    helper = !/opt/homebrew/bin/gh auth git-credential
[credential "https://gist.github.com"]
    helper = !/opt/homebrew/bin/gh auth git-credential

