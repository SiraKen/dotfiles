#!/bin/bash

# List array of packages
packages=(
    "spt"
)

cat <<EOF
=============================================
 snap Installer
=============================================
EOF

# Update package list
printf "Updating package list..."
snap refresh

# Install packages
for package in "${packages[@]}"; do
  if [ "$package" != "" ]; then
    printf "Installing $package..."
    snap install $package
  fi
done

